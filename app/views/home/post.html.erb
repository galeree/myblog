<script type="text/javascript">
	$(document).ready(function() {
		var post = $('.post');
		var tag = $('.tag span');
		post.click(function() {
			location.href = "/post/"+$(this).data("link");
		});

		tag.click(function() {
			location.href = "/tag/"+$(this).data("tag");
		});
	});
</script>

